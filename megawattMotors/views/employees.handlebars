<html>

<h3>Add Employee:</h3>
<form id="addemployee" action="/employees" method="post">
    First Name: <input required type="text" name="first_name"><br>
    Last Name: <input required type="text" name="last_name"><br>
    Address: <input required type="text" name="employee_address">
    City: <input required type="text" name="city">
    State: <input required type="text" name="employee_state">
    Zipcode: <input required type="text" name="zip_code"><br>
    Phone Number: <input required type="text" name="phone_number"><br>
    <input type="Submit" value="Submit">
</form>
</br>

<h3>Employees:</h3>

<table class="table" cellspacing=3 cellpadding=5 id="order_table">
    <thead> 
        <th>Employee ID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Address</th>
        <th>City</th> 
        <th>State</th>
        <th>Zipcode</th>
        <th>Phone Number</th> 
    </thead>
    <tbody>
        {{#each employees}}
        <tr>
            <td>{{this.employee_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.employee_address}}</td>
            <td>{{this.city}}</td>
            <td>{{this.employee_state}}</td>
            <td>{{this.zip_code}}</td>
            <td>{{this.phone_number}}</td>

            <td><button class='delete_icon' onClick="deleteemployee({{employee_id}})"></button></td>
        </tr>
        {{/each}}
    </tbody>  
</table> 
</html>
